
<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content.html_safe %>
</p>
<% if user_signed_in? %>
	<%= link_to 'Edit', edit_post_path(@post) %> | 
	<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %> | 
<% end %>
<%= link_to 'Back', posts_path %>
